// Save as App.js
import React, { useState } from 'react';
import { StyleSheet, Text, View, TouchableOpacity, Alert } from 'react-native';

export default function App() {
  const [callStatus, setCallStatus] = useState("Monitoring...");

  const simulateIncomingCall = async () => {
    // Simulating a call to your Python API
    try {
      const response = await fetch('http://YOUR_BACKEND_IP:8000/analyze-call', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          phone_number: "+1-555-0199",
          location: "Unknown",
          metadata: { "carrier": "VoIP", "frequency": "High" }
        })
      });
      const data = await response.json();
      
      if (data.action === "BLOCK") {
        setCallStatus("ðŸš¨ SCAM DETECTED!");
        Alert.alert("Warning", `High risk call from ${data.phone_number}`);
      } else {
        setCallStatus("âœ… Safe Caller");
      }
    } catch (error) {
      console.error(error);
    }
  };

  return (
    <View style={styles.container}>
      <Text style={styles.title}>AI Scam Guard</Text>
      <View style={styles.statusBox}>
        <Text style={styles.statusText}>{callStatus}</Text>
      </View>
      
      <TouchableOpacity style={styles.button} onPress={simulateIncomingCall}>
        <Text style={styles.buttonText}>Simulate Incoming Call</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: '#0f172a', alignItems: 'center', justifyContent: 'center' },
  title: { fontSize: 24, color: '#fff', fontWeight: 'bold', marginBottom: 20 },
  statusBox: { padding: 20, backgroundColor: '#1e293b', borderRadius: 10, width: '80%', alignItems: 'center' },
  statusText: { color: '#38bdf8', fontSize: 18 },
  button: { marginTop: 30, backgroundColor: '#ef4444', padding: 15, borderRadius: 8 },
  buttonText: { color: '#fff', fontWeight: '600' }
});
